<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TavoloNew" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_6</item>
        <item name="colorPrimaryVariant">@color/blue_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_5</item>
        <item name="colorSecondaryVariant">@color/orange_7</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Splash" parent="Base.Theme.TavoloNew">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

</resources>