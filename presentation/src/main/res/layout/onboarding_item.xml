<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/onboarding_image"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:src="@drawable/onboarding_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onboarding_description"
        style="@style/TextStyle"
        android:layout_width="272sp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/onboarding_image"
        app:layout_constraintStart_toStartOf="@id/onboarding_image"
        app:layout_constraintTop_toBottomOf="@id/onboarding_image"
        tools:text="Our application is to communicate between developer or skilled worker and client to fix his problem " />


</androidx.constraintlayout.widget.ConstraintLayout>