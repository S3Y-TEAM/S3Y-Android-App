        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>

    <!--    Selection and experience -->
    <style name="SelectionStyle">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_shadowColorDark">@color/shadow_color_4</item>
        <item name="neumorph_shadowColorLight">@color/gradiant_1</item>
        <item name="neumorph_cornerSize">30dp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/omnes_medium</item>
        <item name="android:padding">@dimen/_18sdp</item>
    </style>

    <!--    Edit text -->
    <style name="MainEditText">
        <item name="neumorph_backgroundColor">@color/white</item>
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="neumorph_shadowColorDark">@color/shadow_color_4</item>
        <item name="neumorph_shadowColorLight">@color/gradiant_1</item>
        <item name="neumorph_shapeAppearance">@style/CustomShapeAppearance</item>
    </style>


    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSizeTopLeft">8dp</item>
        <item name="neumorph_cornerSizeTopRight">8dp</item>
        <item name="neumorph_cornerSizeBottomLeft">8dp</item>
        <item name="neumorph_cornerSizeBottomRight">8dp</item>
    </style>


    <style name="MainButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="endSuccessDrawable">@drawable/ic_success</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
        <item name="android:layout_marginBottom">@dimen/_24sdp</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">@dimen/_6sdp</item>
        <item name="enableRestore">true</item>
        <item name="shrinkShape">Oval</item>
    </style>

    <style name="SkipButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/button_save</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_color_4</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginStart">@dimen/_18sdp</item>
        <item name="android:layout_marginEnd">@dimen/_18sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/omnes_bold</item>
        <item name="android:textColor">@color/main_color</item>
    </style>


