<resources>

    <style name="Base.Theme.TavoloNew" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_6</item>
        <item name="colorPrimaryVariant">@color/blue_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_5</item>
        <item name="colorSecondaryVariant">@color/orange_7</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Shapable-->
    <style name="rounded25">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="rounded10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <!-- Dialog -->
    <style name="Widget.App.Dialog.FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Widget.App.animation.dialog</item>
        <item name="android:windowBackground">#66000000</item>
    </style>

    <!-- Dialog Animation-->
    <style name="Widget.App.animation.dialog" parent="Widget.MaterialComponents.TextView">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- BottomSheetStyle - needed to show snack bar over bottom sheet-->
    <style name="ThemeOverlay.MyApp.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="snackbarStyle">@style/Widget.MyApp.BottomSheet.Snackbar</item>
    </style>

    <style name="Widget.MyApp.BottomSheet.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="elevation">22dp</item>
    </style>


